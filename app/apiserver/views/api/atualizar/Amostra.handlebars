<center><h1> Alteração dos dados de uma Amostra </h1></center>
    {{#each erros}}
        <div class="alert alert-danger">{{ texto }}</div>
    {{/each}}
<div class="card">
    <div class="card-body">
    <form name="criarAmostra" action="/api/alterar_Amostra" method="POST">


    <table class="table table-striped"> 

      <input type="hidden" name="key_horizonte" value="{{result.key_horizonte}}">
      <input type="hidden" name="key_amostra" value="{{resultKey}}">
    
<!-- Etiqueta da Amostra -->
    <div class="row">
      <div class="col-md">
        <label class="col-form-label-sm">Etiqueta</label> 
        <input type="text" cols="80" maxlength="20" id="nome" name="nome" placeholder="Etiqueta de identificação da amostra" required class="form-control" value="{{result.nome}}">
        </div>
    </div>
<!-- Observações Complementares -->
    <legend>Observações Complementares </legend> 
   <div class="row col-md">
      <div class="col-md">
        <textarea id="comentario" name="comentario" cols="80" rows="5">{{result.comentario}}</textarea>
        </div>
     </div>

<!-- Botão de gravar registro -->
    <div id="botao_horizonte" class="botao">
      <input type="submit" id="enviar" name="enviar" value="Gravar Amostra" class="btn btn-success" style="width:100%;">
    </div>

    </table>  

    </form>

    </div>  
</div>
