<center><h1> Inclusão de nova amostra</h1></center>

    {{#each erros}}
        <div class="alert alert-danger">{{ texto }}</div>
    {{else}}

    {{/each}}

<div class="card">
    <div class="card-body">

    <form name="criarAmostra" action="/api/criar_Amostra" method="POST">

    <table class="table table-striped">

    <input type="hidden" name="key_horizonte" value="{{key_horizonte}}">
    
<!-- Etiqueta do Amostra -->
    <div class="row">
      <div class="col-md">
        <label class="col-form-label-sm">Etiqueta</label> 
        <input type="text" cols="80" maxlength="20" id="nome" name="nome" placeholder="Etiqueta de identificação da amostra" required class="form-control">
        </div>
    </div>
<!-- Observações Complementares -->
    <legend>Observações Complementares </legend> 
   <div class="row col-md">
      <div class="col-md">
        <textarea id="comentario" name="comentario" cols="80" rows="5" placeholder="Observação complementar"></textarea>
        </div>
     </div>


<!-- Botão de gravar registro -->
    <div>
      <input type="submit" id="enviar" name="enviar" value="Gravar Amostra" class="btn btn-success" style="width:100%;">
    </div>

</table>

    </form>

    </div>  
</div>
