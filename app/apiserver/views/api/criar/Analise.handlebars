<center><h1> Inclusão de nova análise de solo</h1></center>

    {{#each erros}}
        <div class="alert alert-danger">{{ texto }}</div>
    {{else}}

    {{/each}}

<div class="card">
    <div class="card-body">

    <form name="criarAnalise" action="/api/criar_Analise" method="POST">

    <table class="table table-striped">

    <input type="hidden" name="key_amostra" value="{{key_amostra}}">
    
<!-- Identificação do Analise -->
    <div class="row">
      <div class="col-md">
        <label class="col-form-label-sm">Exame solicitado</label> 
        <input type="text" maxlength="50" id="nome" name="nome" placeholder="Exame" required class="form-control">
        </div>
    </div>
    <div class="row">
      <div class="col-md">
        <label class="col-form-label-sm">Resultado</label> 
        <input type="text" maxlength="50" id="resultado" name="resultado" placeholder="resultado" required class="form-control">
        </div>
    </div>

<!-- Botão de gravar registro -->
    <div>
      <input type="submit" id="enviar" name="enviar" value="Gravar Analise" class="btn btn-success" style="width:100%;">
    </div>

</table>

    </form>

    </div>  
</div>
